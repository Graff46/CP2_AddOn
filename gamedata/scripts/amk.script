function get_weapon_data(sobj, state_only)
	local _type = IAmAWeapon[sobj:clsid()] or abort("amk.get_weapon_data: sobj[%s] is no weapon!", sobj:name())
	local t = {}

	-- state-part
	local stpk=net_packet()
	sobj:STATE_Write(stpk)
	stpk:r_seek(0)
	-- parse_object_packet
	t.gvid = stpk:r_u16()
	t.obf32u1 = stpk:r_float()
	t.obs32u2 = stpk:r_s32()
	t.lvid = stpk:r_s32()
	t.oflags = stpk:r_s32()
	t.custom = stpk:r_stringZ()
	t.sid = stpk:r_s32()
	t.obs32u3=stpk:r_s32()
	-- parse_visual_packet
	t.visual = stpk:r_stringZ()
	t.vsu8u1 = stpk:r_u8()
	-- parse_item_packet
	t.condition=stpk:r_float()
	-- parse_item_weapon_packet
	t.ammo_current = stpk:r_u16()
	t.ammo_elapsed = stpk:r_u16()
	t.weapon_state = stpk:r_u8()
	t.addon_flags = stpk:r_u8()
	t.ammo_type = stpk:r_u8()

	if state_only then return t end

	t.upd_part = true
	-- update-part
	local uppk=net_packet()
	sobj:UPDATE_Write(uppk)
	uppk:r_seek(0)
	-- se_weapon_magazined_w_gl
	if _type == "magazined_w_gl" then
		t.updgrenade_mode = uppk:r_u8()
	end
	-- parse_item_packet
	local n = uppk:r_u8()
	t.updnum_items = n
	if n ~= 0 then
		t.updpos=uppk:r_vec3()
		t.updrotation=uppk:r_qt_q8()
		if bit_and(n, 64) == 64 then
			t.updangular_vel=uppk:r_vec_q8()
		end
		if bit_and(n, 128) == 128 then
			t.updlinear_vel=uppk:r_vec_q8()
		end
	end
	-- parse_item_weapon_packet
	t.updcondition = uppk:r_u8()
	t.updweapon_flags = uppk:r_u8()
	t.updammo_elapsed = uppk:r_u16()
	t.updaddon_flags = uppk:r_u8()
	t.updammo_type = uppk:r_u8()
	t.updweapon_state = uppk:r_u8()
	t.updweapon_zoom = uppk:r_u8()
	-- se_weapon_magazined
	t.updcurrent_fire_mode = uppk:r_u8()
	-- se_weapon_shotgun
	if _type == "shotgun" then
		t.updammo_ids = {}
		n = uppk:r_u8()
		for i = 1, n do
			table.insert(t.updammo_ids, uppk:r_u8())
		end
	end

	return t
end

function set_weapon_data(t,sobj)
	-- state-part
	local stpk=net_packet()
	-- fill_object_packet
	stpk:w_u16(t.gvid)
	stpk:w_float(t.obf32u1)
	stpk:w_s32(t.obs32u2)
	stpk:w_s32(t.lvid)
	stpk:w_s32(t.oflags)
	stpk:w_stringZ(t.custom)
	stpk:w_s32(t.sid)
	stpk:w_s32(t.obs32u3)
	-- fill_visual_packet
	stpk:w_stringZ(t.visual)
	stpk:w_u8(t.vsu8u1)
	-- fill_item_packet
	stpk:w_float(t.condition)
	-- fill_item_weapon_packet
	stpk:w_u16(t.ammo_current)
	stpk:w_u16(t.ammo_elapsed)
	stpk:w_u8(t.weapon_state)
	stpk:w_u8(t.addon_flags)
	stpk:w_u8(t.ammo_type)

	local size=stpk:w_tell()
	stpk:r_seek(0)
	sobj:STATE_Read(stpk,size)

	if not t.upd_part then return end
	-- update-part
	local uppk=net_packet()
	-- se_weapon_magazined_w_gl
	if t.updgrenade_mode then
		uppk:w_u8(t.updgrenade_mode)
	end
	-- fill_item_packet
	local n = t.updnum_items
	uppk:w_u8(n)
	if n ~= 0 then
		uppk:w_vec3(t.updpos)
		uppk:w_qt_q8(t.updrotation)
		if bit_and(n, 64) == 64 then
			uppk:w_vec_q8(t.updangular_vel)
		end
		if bit_and(n, 128) == 128 then
			uppk:w_vec_q8(t.updlinear_vel)
		end
	end
	-- fill_item_weapon_packet
	uppk:w_u8(t.updcondition)
	uppk:w_u8(t.updweapon_flags)
	uppk:w_u16(t.updammo_elapsed)
	uppk:w_u8(t.updaddon_flags)
	uppk:w_u8(t.updammo_type)
	uppk:w_u8(t.updweapon_state)
	uppk:w_u8(t.updweapon_zoom)
	-- se_weapon_magazined
	uppk:w_u8(t.updcurrent_fire_mode)
	-- se_weapon_shotgun
	if t.updammo_ids then
		uppk:w_u8(#t.updammo_ids)
		for i,v in ipairs(t.updammo_ids) do
			uppk:w_u8(v)
		end
	end

	uppk:r_seek(0)
	sobj:UPDATE_Read(uppk)
end

function parse_item_weapon_packet(ret,stpk,updpk)
	ret.ammo_current = stpk:r_u16()
	ret.ammo_elapsed = stpk:r_u16()
	ret.weapon_state = stpk:r_u8()
	ret.addon_flags = stpk:r_u8()
	ret.ammo_type = stpk:r_u8()
	
	ret.updcondition = updpk:r_u8()
	ret.updweapon_flags = updpk:r_u8()
	ret.updammo_elapsed = updpk:r_u16()
	ret.updaddon_flags = updpk:r_u8()
	ret.updammo_type = updpk:r_u8()
	ret.updweapon_state = updpk:r_u8()
	ret.updweapon_zoom = updpk:r_u8()
	ret.updcurrent_fire_mode = updpk:r_u8()
  return ret
end

function fill_item_weapon_packet(ret,stpk,updpk)
	stpk:w_u16(ret.ammo_current)
	stpk:w_u16(ret.ammo_elapsed)
	stpk:w_u8(ret.weapon_state)
	stpk:w_u8(ret.addon_flags)
	stpk:w_u8(ret.ammo_type)
	
	updpk:w_u8(ret.updcondition)
	updpk:w_u8(ret.updweapon_flags)
	updpk:w_u16(ret.updammo_elapsed)
	updpk:w_u8(ret.updaddon_flags)
	updpk:w_u8(ret.updammo_type)
	updpk:w_u8(ret.updweapon_state)
	updpk:w_u8(ret.updweapon_zoom)
	updpk:w_u8(ret.updcurrent_fire_mode)
  return ret
end

function game_milliseconds()
	if StartTime == nil then
		getStartTime()
		if StartTime == nil then
			return 0
		end
	end
	local gtime = game.get_game_time()
	local seconds = gtime:diffSec(StartTime)
	local y,m,d,h,min,sec,ms = gtime:get()
	return (seconds * 1000 + ms)
end

function game_seconds()
	if StartTime == nil then
		getStartTime()
		if StartTime == nil then
			return 0
		end
	end
	return game.get_game_time():diffSec(StartTime)
end

function game_minutes()
	return math_floor(game_seconds() / 60)
end

function game_hours()
	return math_floor(game_seconds() / 3600)
end

function game_days()
	return math_floor(game_seconds() / 86400)
end
