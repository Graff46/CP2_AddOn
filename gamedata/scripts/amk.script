	if a == 3 then ret.job_online_condlist = stpk:r_stringZ() end
	ret.job_online = a
	ret.was_in_smart_terrain = stpk:r_u8()
	ret.death_dropped = stpk:r_u8()
	ret.resupply_time = stpk:r_eof() and 0 or stpk:r_s16()
	
	ret.stunk1 = stpk:r_tail()
	return ret
