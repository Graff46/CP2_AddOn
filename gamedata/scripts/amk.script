function parse_skeleton_packet(ret,stpk,updpk)
	ret.skeleton=stpk:r_stringZ()
	ret.skeleton_flags=stpk:r_u8()
	ret.source_id=stpk:r_u16()

	if bit_and(ret.skeleton_flags, 4) ~= 0 then
		ret.bones_mask	= stpk:r_u64()
		ret.root_bone	= stpk:r_u16()
		ret.bbox_min	= stpk:r_vec3()
		ret.bbox_max	= stpk:r_vec3()
		ret.bones_count	= stpk:r_u16()
		if ret.bones_count > 0 then
			ret.bones = {}
			for i = 1, ret.bones_count do
				ret.bones[i] = {
					ph_position = stpk:r_vec_q8(),
					ph_rotation = stpk:r_qt_q8(),
					enabled = stpk:r_u8()
				}
			end
		end
	end

--	ret.updsku8u1=updpk:r_u8()
	return ret
end

function fill_skeleton_packet(ret,stpk,updpk)
	stpk:w_stringZ(ret.skeleton)
	stpk:w_u8(ret.skeleton_flags)
	stpk:w_u16(ret.source_id)

	if bit_and(ret.skeleton_flags, 4) ~= 0 then
		stpk:w_u64	( ret.bones_mask )
		stpk:w_u16	( ret.root_bone )
		stpk:w_vec3	( ret.bbox_min )
		stpk:w_vec3	( ret.bbox_max )
		stpk:w_u16	( ret.bones_count )
		if ret.bones_count > 0 then
			for i, v in ipairs(ret.bones) do
				stpk:w_vec_q8( v.ph_position )
				stpk:w_qt_q8( v.ph_rotation )
				stpk:w_u8( v.enabled )
			end
		end
	end

--	updpk:w_u8(ret.updsku8u1)
end

