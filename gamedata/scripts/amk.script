function readvu8uN(packet,n)
  local v={}
  for i=1,n,1 do
    table.insert(v,packet:r_u8())
  end
  return v
end

function writevu8uN(pk,v)
  local len=#v
  for i=1,len,1 do
    pk:w_u8(v[i])
  end
end

function parse_item_packet(ret,stpk,updpk)
	ret.condition=stpk:r_float()
	
	local n = updpk:r_u8()
	ret.updnum_items = n
	if n == 0 then return ret end
	ret.updpos=updpk:r_vec3()
	ret.updrotation=updpk:r_qt_q8()
	if bit_and(n, 64) == 64 then
		ret.updangular_vel=updpk:r_vec_q8()
	end
	if bit_and(n, 128) == 128 then
		ret.updlinear_vel=updpk:r_vec_q8()
	end
	return ret
end

function fill_item_packet(ret,stpk,updpk)
	stpk:w_float(ret.condition)
	updpk:w_u8(ret.updnum_items)
	if ret.updnum_items == 0 then return end
	updpk:w_vec3(ret.updpos)
	updpk:w_qt_q8(ret.updrotation)
	if bit_and(n, 64) == 64 then
		updpk:w_vec_q8(ret.updangular_vel)
	end
	if bit_and(n, 128) == 128 then
		updpk:w_vec_q8(ret.updlinear_vel)
	end
end

