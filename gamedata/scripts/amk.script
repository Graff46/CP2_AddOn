function parse_shape_packet(t,stpk,uppk)
	local shape_count = stpk:r_u8()
	t.shapes={}
	for i=1,shape_count do
		local shape_type = stpk:r_u8()
		local v = {}
		t.shapes[i] = v
		v.shtype = shape_type
		if shape_type == 0 then
			-- sphere
			v.center = stpk:r_vec3()
			v.radius = stpk:r_float()
		else
			-- box
			v.v1 = stpk:r_vec3()
			v.v2 = stpk:r_vec3()
			v.v3 = stpk:r_vec3()
			v.offset = stpk:r_vec3()
		end
	end
end

function fill_shape_packet(t,stpk,updpk)
	local n = #t.shapes
	stpk:w_u8(n)
	local sh
	for i = 1, n do
		sh = t.shapes[i]
		stpk:w_u8(sh.shtype)
		if sh.shtype == 0 then
			stpk:w_vec3(sh.center); stpk:w_float(sh.radius)
		else
			stpk:w_vec3(sh.v1); stpk:w_vec3(sh.v2)
			stpk:w_vec3(sh.v3); stpk:w_vec3(sh.offset)
		end
	end
end

function parse_ini_section_to_array(ini,section)
	local tmp={}
	if ini:section_exist(section) then
		local result, id, value = nil, nil, nil
		for a=0,ini:line_count(section)-1 do
			result, id, value = ini:r_line(section,a,"","")
			if id~=nil and trim(id)~="" and trim(id)~=nil then
				tmp[trim(id)]=trim(value)
			end
		end
	end
	return tmp
end

function parse_ini_section_to_array_new(iniFileName, section)
	local tmp={}
	if iniLineSectionExist(section, iniFileName) then
		local result, id, value = nil, nil, nil
		for a=0,iniLinesCount(section, iniFileName)-1 do
			result, id, value = getIniLine(section,a,"","",iniFileName)
			if id~=nil and trim(id)~="" and trim(id)~=nil then
				tmp[trim(id)]=trim(value)
			end
		end
	end
	return tmp
end

function quotemeta(str)
	return (string_gsub(s, "[%^%$%(%)%%%.%[%]%*%+%-%?]", "%%%1"))
end


function add(v1,v2)
	local nv=vector()
	nv.x=v1.x+v2.x
	nv.y=v1.y+v2.y
	nv.z=v1.z+v2.z
	return nv
end

function set_len(v,num)
	local cl = math_sqrt(v.x*v.x+v.y*v.y+v.z*v.z)
	cl = num/cl
	v.x= v.x*cl
	v.y= v.y*cl
	v.z= v.z*cl
	return v
end

